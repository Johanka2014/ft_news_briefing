        <!-- Navigation -->
        <div class="flex justify-between mt-8">
            <button id="prev-btn" class="bg-blue-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-blue-700 disabled:bg-gray-400 disabled:cursor-not-allowed">Previous Topic</button>
            <button id="check-btn" class="bg-green-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-green-700">Check Answers</button>
            <button id="reset-btn" class="bg-gray-500 text-white font-bold py-3 px-6 rounded-lg hover:bg-gray-600">Reset Current Page</button>
            <button id="next-btn" class="bg-blue-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-blue-700 disabled:bg-gray-400 disabled:cursor-not-allowed">Next Topic</button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const pages = document.querySelectorAll('.page');
            const prevBtn = document.getElementById('prev-btn');
            const nextBtn = document.getElementById('next-btn');
            const checkBtn = document.getElementById('check-btn');
            const resetBtn = document.getElementById('reset-btn');
            let currentPageIndex = 0;

            function updateNavButtons() {
                prevBtn.disabled = currentPageIndex === 0;
                nextBtn.disabled = currentPageIndex === pages.length - 1;
            }

            function showPage(index) {
                pages.forEach((page, i) => {
                    page.classList.toggle('active', i === index);
                });
                currentPageIndex = index;
                updateNavButtons();
            }
            
            prevBtn.addEventListener('click', () => {
                if (currentPageIndex > 0) {
                    showPage(currentPageIndex - 1);
                }
            });

            nextBtn.addEventListener('click', () => {
                if (currentPageIndex < pages.length - 1) {
                    showPage(currentPageIndex + 1);
                }
            });
            
            showPage(0);

            // --- Drag and Drop Logic for ALL pages ---
            const draggables = document.querySelectorAll('.draggable');
            let draggedItem = null;

            draggables.forEach(draggable => {
                draggable.addEventListener('dragstart', (e) => {
                    draggedItem = e.target;
                    setTimeout(() => e.target.classList.add('dragging'), 0);
                });
                draggable.addEventListener('dragend', (e) => e.target.classList.remove('dragging'));
            });
            
            document.querySelectorAll('.drop-zone').forEach(zone => {
                zone.addEventListener('dragover', e => e.preventDefault());
                zone.addEventListener('drop', e => {
                    e.preventDefault();
                    if (draggedItem && draggedItem.closest('.page').id === zone.closest('.page').id) {
                         if (zone.children.length > 0) {
                            // Swap items if drop zone is already occupied
                            draggedItem.parentElement.appendChild(zone.firstElementChild);
                        }
                        zone.appendChild(draggedItem);
                        draggedItem = null;
                    }
                });
            });

            // --- Check Answers on CURRENT page ---
            checkBtn.addEventListener('click', () => {
                const currentPage = document.querySelector('.page.active');
                
                // T/F Quiz
                currentPage.querySelectorAll('.tf-quiz > div').forEach(q => {
                    const selected = q.querySelector('input:checked');
                    const feedback = q.querySelector('.feedback');
                    feedback.classList.add('show');
                    if (selected && selected.value === q.dataset.answer) {
                        feedback.textContent = 'Correct!';
                        feedback.className = 'feedback show correct';
                    } else {
                        feedback.textContent = `Incorrect. The correct answer is ${q.dataset.answer}.`;
                        feedback.className = 'feedback show incorrect';
                    }
                });

                // Vocab Matching
                currentPage.querySelectorAll('.vocab-quiz .drop-zone').forEach(zone => {
                    const dropped = zone.querySelector('.draggable');
                    if (dropped && dropped.dataset.match === zone.dataset.match) {
                        zone.classList.remove('incorrect');
                        zone.classList.add('correct');
                    } else {
                         if (dropped && dropped.id === zone.dataset.match) {
                             zone.classList.remove('incorrect');
                             zone.classList.add('correct');
                         } else {
                            zone.classList.remove('correct');
                            zone.classList.add('incorrect');
                         }
                    }
                });


                // Comprehension Quiz
                currentPage.querySelectorAll('.comprehension-quiz > div').forEach(q => {
                    const input = q.querySelector('input');
                    const feedback = q.querySelector('.feedback');
                    const keywords = feedback.dataset.answer.split(',').map(k => k.trim().toLowerCase());
                    const answer = input.value.toLowerCase();
                    feedback.classList.add('show');
                    if (keywords.some(key => answer.includes(key))) {
                        feedback.textContent = 'Correct!';
                        feedback.className = 'feedback show correct';
                    } else {
                        feedback.textContent = `Check the text again. Key ideas: ${keywords.join(', ')}.`;
                        feedback.className = 'feedback show incorrect';
                    }
                });
            });

            // --- Reset CURRENT page ---
            resetBtn.addEventListener('click', () => {
                const currentPage = document.querySelector('.page.active');
                currentPage.querySelectorAll('input[type="radio"]').forEach(r => r.checked = false);
                currentPage.querySelectorAll('input[type="text"]').forEach(i => i.value = '');
                currentPage.querySelectorAll('.feedback').forEach(f => {
                    f.className = 'feedback';
                    f.textContent = '';
                });

                const vocabContainer = currentPage.querySelector('.vocab-container');
                currentPage.querySelectorAll('.drop-zone').forEach(zone => {
                    if (zone.children.length > 0) {
                        vocabContainer.appendChild(zone.firstElementChild);
                    }
                    zone.className = 'drop-zone p-3 rounded-lg';
                });
                if(vocabContainer) {
                     // Sort the items back to their original order
                     Array.from(vocabContainer.children)
                        .sort((a, b) => a.id.localeCompare(b.id, undefined, {numeric: true}))
                        .forEach(node => vocabContainer.appendChild(node));
                }
            });
        });
    </script>

</body>
</html>
